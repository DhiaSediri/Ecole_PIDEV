{% extends 'base.html.twig' %}

{% block body %}

    <section class="hero-wrap hero-wrap-2" style="background-image: url('{{ asset('template/images/bg_2.jpg') }}');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center fadeInUp ftco-animated">
                    <h1 class="mb-2 bread">Séance</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Séance <i class="ion-ios-arrow-forward"></i></span></p>
                </div>
            </div>
        </div>
    </section>

    <h1>Seance</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ seance.id }}</td>
        </tr>
        <tr>
            <th>Classe</th>
            <td>{{ seance.classe.nom }}</td>
        </tr>
        <tr>
            <th>Matiere</th>
            <td>{{ seance.matiere.nom }}</td>
        </tr>
        <tr>
            <th>Salle</th>
            <td>{{ seance.salle.nom }}</td>
        </tr>
        <tr>
            <th>Prof</th>
            <td>{{ seance.prof.nom }}</td>
        </tr>
        <tr>
            <th>Horaire</th>
            <td>{{ seance.horaire.nom }}</td>
        </tr>
        <tr>
            <th>Jour</th>
            <td>{{ seance.jour.nom }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('seance_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('seance_edit', { 'id': seance.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-lg btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

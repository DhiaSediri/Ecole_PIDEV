<h1>Chercher Voiture par série :</h1>

<form method="POST">

    Série <input type="text" name="serie">

    <input type="submit" name="submit" value="Chercher">

</form>

<table border="8">

    <tr>
        <td>Ref</td>
        <td>Série</td>
        <td>Date de circulation</td>
        <td>Modele</td>
    </tr>

    {% for entity in voitures %}
        <tr>
        <tr>
            <td>
                {{ entity.ref }}
            </td>
            <td>
                {{ entity.serie }}
            </td>
            <td>
                {{ entity.datemisecirculation|date }}
            </td>
            <td>
                {{ entity.modele.libelle }}
            </td>
        </tr>
        </tr>
    {% endfor %}

</table>